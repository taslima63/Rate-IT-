<div class="review">
	<p class="review-rating"> Rating : <%= moviereview.rating %></p>
	<p class="review-comment"> <%= moviereview.comment %></p>
	<h4> rated by <% @us.each do |us| %>
		<% if us.id == moviereview.user_id %>
			<%= us.user_name %>
		<% end %>
	<% end %>
	</h4>
		<% if user_signed_in? %>
			<% if moviereview.user_id == current_user.id  %>
				<div class="links btn-group">
					<%= link_to "Edit", edit_movie_moviereview_path(moviereview.movie, moviereview) ,class:"btn btn-custom" %> 
					<%= link_to "Delete", movie_moviereview_path(moviereview.movie, moviereview), method: :delete, data: { confirm: "Are you sure?" } ,class:"btn btn-custom" %>
				</div>
			<% elsif current_user.usertype == 779 %>
				<div class="links btn-group">
					<%= link_to "Delete", movie_moviereview_path(moviereview.movie, moviereview), method: :delete, data: { confirm: "Are you sure?" } ,class:"btn btn-custom" %>
				</div>	
			<% end %>
		<% end %>	
</div>	 