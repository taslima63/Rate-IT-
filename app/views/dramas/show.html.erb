<!DOCTYPE html>
<html>
<head>
    <title><%= @drama.title %></title>
</head>
<body id="page1">
    <a name="top"></a>
    <header>    
        <div class="row-1">
            <ul  class="sf-menu">
                <li class="bgr"> <%= link_to "Rateit", root_path %></li>
                <li class="bgr"> <%= link_to "Book", books_path %></li>
                <li class="bgr"> <%= link_to "Movie", movies_path %></li>
                <li class="bgr"> <%= link_to "Song", songs_path %></li>
                <li class="bgr"> <%= link_to "Drama Series", dramas_path %></li>
                <li class="bgr"> <%= link_to "About us", static_info_path %></li>
                <% if user_signed_in? %>
                <li class="bgr"> <%= link_to "Log out", destroy_user_session_path, :method => :delete %></li>
                <li class="bgr"> <%= link_to current_user.user_name, edit_registration_path(current_user) %> </li>
                <% if current_user.usertype == 779 %>
                <li class="bgr"> <%= link_to "Admin", static_admin_path %></li>
                <% end %>
                <% else %>
                <li class="bgr"> <%= link_to "Sign Up", new_user_registration_path %></li>
                <li class="bgr"> <%= link_to "Log In", new_user_session_path %> </li>
                <% end %>  
            </ul>
        </div> 
        <div class="row-2">
            <% flash.each do |key, value| %>
            <div><%= value %></div>
            <% end %>
        </div>
    </header>

    <section id="content">   
        <div class="wrapper">
            <div style=" width:180px; float:left; margin-left:10px;">
                <ul class="list-1">
                 <div style="color:#8c8c8c; text-align:center; padding:6px; background-color: #ededed; font-size:14px;"> Order By </div>
                 <li> <a href= "<%= dramas_path %> "> Uploaded Date</a> </li>
                 <li> <a href="<%= dramas_bytitle_path %> "> Name</a> </li>
                 <li> <a href="<%= dramas_byyear_path %>"> Released Year </a> </li>
                 <li> <a href="<%= dramas_byrating_path %>"> Rating </a> </li>
                 

             </ul>
         </div>               

         <div id="content_box"> 
            <div style=" width:1100px; float:left; margin-left:10px;">
                <div class="bg-grey">
                    <div class="padding-1">
                        <div class="wrapper">
                            <font color="Purple" size="4"><%= @drama.title %></font>
                        </div>
                    </div>
                </div>
                <div style="font-size:14px;" class="box" width = "100%" height = "1010">

                    <div class="row">
                        <div class="col-md-4">
                            <%= image_tag @drama.drama_img.url(:book_show), class: "book-show" %>
                            <br>
                            <br>
                            <div class="links btn_group">  
                                <% if user_signed_in? %>
                                
                                <%= link_to "Add Review",  new_drama_dramareview_path(@drama), class:"btn btn-custom"  %>
                                <%= link_to "Add Comment",  new_drama_dramarep_path(@drama), class:"btn btn-custom"  %>
                                <% end %>
                                <%= link_to "Back", dramas_path, class:"btn btn-custom"  %>
                                <% if user_signed_in? %>
                                <% if @drama.user_id == current_user.id  || current_user.usertype == 779 %>
                                <%= link_to "Edit", edit_drama_path(@drama), class:"btn btn-custom"  %>
                                <%= link_to "Delete", drama_path(@drama), method: :delete, data: { confirm: "Are You Sure?" },class:"btn btn-custom" %>
                                <% end %>
                                <% end %>
                            </div>    
                        </div>
                        <div class="col-md-8">
                            <div class="book-info">
                                <h4 class="drama_stars"> Stars : <%= @drama.star %> </h4>
                                <h4 class="drama_country"> Country : <%= @drama.con %> </h4>
                                <h2 class="avg_rating"> Average Rating : <%= @average_dramareview %></h2>
                                <span class="number_of_reviews">Based on <%= @drama.dramareviews.count %> reviews </span>
                            </div>    
                            
                            <br>
                            <br>
                            
                            <div class="reviews">
                                <h1>Reviews</h1>
                                <%= render @drama.dramareviews.all.order('created_at DESC')  %>
                                <%= render @drama.dramareps.all.order('created_at DESC')  %>
                            </div>    
                        </div>
                    </div>


                </div>     
            </div>
        </div>
    </div>                                                                                                                                       
</section>

<hr>

<footer>
    <div>
        <ul>
            <li style="margin-left: 800px"><a href="#top">Go to top</a></li>
        </ul>
    </div>
</footer>

</body>
</html>
